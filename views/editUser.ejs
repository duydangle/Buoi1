<form action="/edituser" method="POST">
    <label for="id">ID Người dùng:</label>
    <input type="text" id="id" name="id" value="<%= data.row.id %>" required readonly><br><br>
    
    <label for="username">Tên đăng nhập:</label>
    <input type="text" id="username" name="username" value="<%= data.row.username %>" required><br><br>
    
    <label for="password">Mật khẩu:</label>
    <input type="password" id="password" name="password" value="<%= data.row.password %>" required><br><br>
    
    <label for="fullname">Họ và tên:</label>
    <input type="text" id="fullname" name="fullname" value="<%= data.row.fullname %>" required><br><br>
    
    <label for="address">Địa chỉ:</label>
    <input type="text" id="address" name="address" value="<%= data.row.address %>" required><br><br>
    
    <label for="sex">Giới tính:</label>
    <select id="sex" name="sex" required>
      <option value="male" <% if(data.row.sex === 'male') { %>selected<% } %>>Nam</option>
      <option value="female" <% if(data.row.sex === 'female') { %>selected<% } %>>Nữ</option>
      <option value="other" <% if(data.row.sex === 'other') { %>selected<% } %>>Khác</option>
    </select><br><br>
    
    <label for="email">Email:</label>
    <input type="email" id="email" name="email" value="<%= data.row.email %>" required><br><br>
    
    <button type="submit">Cập nhật</button>
</form>

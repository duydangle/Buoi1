<h1><%= data.title %></h1>
<table>
    <thead>
      <tr>
        <th>STT</th>
        <th>Username</th>
        <th>Address</th>
        <th>Fullname</th>
        <th>Setting</th>
      </tr>
    </thead>
    <tbody>
      <% if (data.rows && data.rows.length > 0) { %> <!-- Kiểm tra xem rows có dữ liệu không -->
        <% data.rows.forEach((user, index) => { %> <!-- Lặp qua danh sách người dùng -->
          <tr>
            <td><%= index + 1 %></td>
            <td><%= user.username %></td>
            <td><%= user.fullname %></td>
            <td><%= user.address %></td>
            <td>
              <a href="/deltauser/<%= user.id %>" class="icon">👁️</a>
              <a href="/edituser/<%= user.id %>" class="icon">✏️</a>
              <!-- Form xóa người dùng -->
              <form action="/deleteuser" method="POST" style="display:inline-block;" onsubmit="return confirm('Are you sure you want to delete this user?');">
                <!-- Trường hidden chứa id người dùng -->
                <input type="hidden" name="id" value="<%= user.id %>" />
                <button type="submit" class="icon">🗑️</button>
              </form>
            </td>
          </tr>
        <% }) %> <!-- Kết thúc vòng lặp -->
      <% } else { %> 
        <tr><td colspan="5">No users found.</td></tr>
      <% } %> <!-- Nếu không có dữ liệu -->
    </tbody>
</table>
